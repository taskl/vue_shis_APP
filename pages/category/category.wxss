    /* border-radius: 20rpx; */
}

.contentItems .content .ul .li text {
    width: auto;
    display: block;
    font-size: 24rpx;
    color: #555;
}

.contentItems .content .ul .li image {
    width: 120rpx;
    height: 120rpx;
}