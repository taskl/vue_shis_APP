.categoryBox {
    display: flex;

}

.categoryItem {
    flex-basis: 25%;
    height: 100vh;
    background-color: #6DC4AC;
}

.categoryItem .item view {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 28rpx;
    color: #fff;
    position: relative;
}

.categoryItem .item view.con::after {
    content: "";
    display: block;
    width: 6rpx;
    height: 40rpx;
    background-color: #6DC4AC;
    position: absolute;
    left: 0px;
    top: 30rpx;
}

.categoryItem .item view.con {
    background-color: #fff;
    color: #6DC4AC;
}

.contentItems {
    flex: 1;
    height: 100vh;
}

.contentItems .content {
    width: 100%;
}

.contentItems .content .ul {
    display: flex;
    flex-direction: column;
    background-color: #fff;
    border-radius: 20rpx;
    margin: 0 20rpx 20rpx;
    margin-top: 10px;
    
}

.title {
    padding: 20rpx;
    background-color: #fff;
    font-size: 30rpx;
    border-radius: 20rpx;
    color: #333;
    text-align: center;
}
.contentos{
    display: flex;
    flex-wrap: wrap;
    padding: 10rpx;
    justify-content: space-between;

}
.contentItems .content .ul .li {
    /* flex: 0 0 33.33%; */
    flex-basis: 30%;
    text-align: center;
    margin-bottom: 28rpx;
    /* box-sizing: border-box; */
    /* border: 1px solid; */
