/* pages/mycolle/mycolle.wxss */
page {
    background-color: #F5F6F7;
}
.commonTitle {
    height: 60rpx;
    line-height: 60rpx;
    /* background-color: #fff; */
    font-size: 24rpx;
    /* border-bottom: 2rpx solid #bfbfbf; */
    text-indent: 1em;
    /* margin-top: 32rpx; */
}

.goodslist {
    display: flex;
    padding: 10px 0;
    background-color: #fff;
    /* margin-bottom: 2rpx; */
    /* margin-bottom: 20rpx; */
    border-bottom: 4rpx solid #eee;

}

.goodslist .left {
    width: 240rpx;
    text-align: center;
}

.goodslist .right {
    /* 剩下宽度分配给右侧 */
    flex: 1;
    height: 200rpx;
    /* 相对定位 */
    position: relative;
    margin-right: 20rpx;
}

.goodslist .left image {
    width: 200rpx;
    height: 200rpx;
}

.goodslist .right image {
    width: 44rpx;
    height: 44rpx;
}

.goodslist .right .goods_name {
    font-size: 36rpx;
    color: #808080;
    height: 100rpx;
    /* 溢出隐藏 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.goodslist .right .goods_address {
    font-size: 24rpx;
    color: #929292;
}

.goodslist .right .goods_price {
    font-size: 30rpx;
    color: #FF1493;
}

.goodslist .right .car {
    position: absolute;
    right: 0px;
    bottom: 0px;
}
.wucolle{
    width: 80px;
    color: #333;
    font-size: 40rpx;
    margin: 300rpx auto;
}