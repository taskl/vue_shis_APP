/* pages/order/order.wxss */
page {
    background-color: #F5F6F7;
}
.navOrder{
    position: fixed;
    left:0px;
    top:0px;
    width: 100%;
    height: 88rpx;
    display: flex;
    background-color: #fff;
    z-index: 10;
}
.navOrder .item{
    width: 20%;
    height: 88rpx;
    line-height: 88rpx;
    text-align: center;
    font-size: 24rpx;
}
.navOrder .item.con{
    color:#60C5F1;
    font-size: 28rpx;
    font-weight: bold;
}

.orderList{
    width: 100%;
    margin-top: 88rpx;
}
.orderList .order{
    padding:0px 20rpx;
    margin-bottom: 5px;
    background-color: #fff;
}
.orderList .order .h1{
    color:#A6A6A6;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom:1px solid #F5F6F7;
    position: relative;
}
.orderList .order .h1 .type{
    position: absolute;
    color:#F47378;
    top:0px;
    right: 10rpx;
}
.orderList .order .bottom{
    border-top:1px solid #F5F6F7;
    font-size: 28rpx;
}
.orderList .order .bottom{
    padding:10rpx 0px;
    display: flex;
    justify-content: space-between;
}
.orderList .order .bottom .fl{
    color:#A6A6A6;
    flex:100rpx;
}
.orderList .order .bottom .fl text{
    font-size: 30rpx;
    color:#262626;
}

.orderList .order .bottom .fr .btn{
    font-size: 26rpx;
    padding:0px 15rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color:#A6A6A6;
    border:1px solid #a6a6a6;
    border-radius: 5px;
    margin-right: 10px;
}



.goodslist{
    display: flex;
    padding: 20rpx 0px;
    background-color: #fff;
    margin-bottom: 2rpx;
}
.goodslist .left{
    width: 240rpx;
    text-align: center;
}
.goodslist .right{
    /* 剩下宽度分配给右侧 */
    flex:1;
    height: 200rpx;
    /* 相对定位 */
    position: relative;
    margin-right: 20rpx;
}

.goodslist .left image{
    width: 200rpx;
    height: 200rpx;
}
.goodslist .right image{
    width: 44rpx;
    height: 44rpx;
}
.goodslist .right .goods_name{
    font-size: 36rpx;
    color:#808080;
    height: 100rpx;
    /* 溢出隐藏 */
    overflow: hidden;
}
.goodslist .right .goods_address{
    font-size: 24rpx;
    color:#929292;
}
.goodslist .right .goods_price{
    margin-top: 40rpx;
    font-size: 30rpx;
    color:#FF1493;
}
.goodslist .goods_num{
    position: absolute;
    right: 0px;
    bottom: 10px;
    color:#BBBBBB;
}

