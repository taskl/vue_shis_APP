/* pages/list/list.wxss */
page {
    background-color: #F5F6F7;
}
.usname{
  margin: 20rpx; 
  height: 30rpx; 
  line-height: 30rpx;
  color: rgb(41, 34, 34);
  font-size: 30rpx;
  text-align: center;
}
.goodslist{
    display: flex;
    /* padding: 20px 0; */
    background-color: #fff;
    border-bottom: solid 1px #eee;
    /* margin-bottom: 20rpx; */
}
.goodslist .left{
    width: 240rpx;
    text-align: center;
}
.goodslist .right{
    /* 剩下宽度分配给右侧 */
    flex:1;
    height: 200rpx;
    /* 相对定位 */
    position: relative;
    margin-right: 20rpx;
}
.goodslist .left image{
    width: 200rpx;
    height: 200rpx;
}
.goodslist .right image{
    width: 44rpx;
    height: 44rpx;
}
.goodslist .right .goods_name{
    font-size: 36rpx;
    color:#808080;
    height: 100rpx;
    /* 溢出隐藏 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.goodslist .right .goods_address{
    font-size: 24rpx;
    color:#929292;
}
.goodslist .right .goods_price{
    font-size: 30rpx;
    color:#FF1493;
}
.goodslist .right .car{
    position: absolute;
    right: 0px;
    bottom: 0px;
}