/* pages/home/home.wxss */
page {
    background-color: #F5F6F7;
    padding-top: 66px;
}

/* 自定义顶部栏高度 */
.nav {
    width: 100%;
    overflow: hidden;
    position: fixed;
    top: 0;
    left: 0;
    bottom: calc(100vh - 132rpx);
    z-index: 10;
}

.nav-title {
    width: 100%;
    height: 45px;
    line-height: 45px;
    text-align: center;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 10;
    font-family: PingFang-SC-Medium;
    font-size: 36rpx;
    letter-spacing: 2px;
}

.nav .back {
    width: 22px;
    height: 22px;
    position: absolute;
    bottom: 0;
    left: 0;
    padding: 10px 15px;
}

.bg-white {
    background-color: #fff;
    /* background-color: #6DC4AC; */
    height: 66px;
}

.bg-gray {
    background-color: #f7f7f7;
}

.overflow {
    overflow: auto;
}

.hidden {
    overflow: hidden;
}

.INinputheader {
    width: 62%;
    height: 30px;
    background: rgba(255, 255, 255, 1);
    border-radius: 30px;
    font-size: 14px;
    margin-top: 2px;
    position: relative;
    float: left;
    margin-left: 18px;
    border: 2rpx solid #eee;
}

.INsearchicon {
    height: 20px;
    position: absolute;
    left: 5px;
    top: 5rpx;
}

.weui-input {
    height: 30px;
    line-height: 30px;
    text-align: left;
    padding-left: 30px;
    letter-spacing: 0px;
}

.INtab {
    text-align: left;
    margin-left: 12px;
    color: #fff;
}


.banner image {
    width: 100%;
}

.bigcategory {
    width: 100%;
    height: 300rpx;
    padding-bottom: 30rpx;
    background-color: #fff;
    margin-bottom: 24rpx;
}

.category {
    width: 1180px;
    height: 300rpx;
    /* 微信小程序推荐使用flex布局 */
    display: flex;
    flex-wrap: wrap;
    padding-top: 30rpx;

}

.category .item {
    flex: 0 0 150rpx;
    text-align: center;
}

.category .item text {
    display: block;
    font-size: 28rpx;
}

/* 1px == 2rpx */
.category image {
    width: 80rpx;
    height: 80rpx;
}

.commonTitle {
    height: 104rpx;
    line-height: 104rpx;
    background-color: #fff;
    font-size: 36rpx;
    border-bottom: 2rpx solid #bfbfbf;
    text-indent: 1em;
    /* margin-top: 32rpx; */
}

.goodslist {
    display: flex;
    padding: 6px 0;
    background-color: #fff;
    margin-bottom: 2rpx;
}

.goodslist .left {
    width: 240rpx;
    text-align: center;
}

.goodslist .right {
    /* 剩下宽度分配给右侧 */
    flex: 1;
    height: 200rpx;
    /* 相对定位 */
    position: relative;
    margin-right: 20rpx;
}

.goodslist .left image {
    width: 200rpx;
    height: 200rpx;
}

.goodslist .right image {
    width: 44rpx;
    height: 44rpx;
}

.goodslist .right .goods_name {
    font-size: 36rpx;
    color: #808080;
    height: 100rpx;
    margin-top: 13px;
    /* 溢出隐藏 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.goodslist .right .goods_address {
    font-size: 24rpx;
    color: #929292;
}

.goodslist .right .goods_price {
    font-size: 30rpx;
    color: #FF1493;
}

.goodslist .right .car {
    position: absolute;
    right: 0px;
    bottom: 0px;
    top: 65px;
}