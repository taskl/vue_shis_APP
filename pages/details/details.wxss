.bottomNav{
    /* 固定定位 */
    position: fixed;
    left:0px;
    bottom: 0px;
    height: 100rpx;
    line-height: 100rpx;
    background: #fff;
    width: 100%;
}
.bottomNav .ul{
    display: flex;
}
.bottomNav .li{
    width: 25%;
    text-align: center;
    font-size: 24rpx;
}
.bottomNav image{
    width: 50rpx;
    height: 50rpx;
}
.bottomNav .li .cart{
    position: relative;
    width: 50rpx;
    margin:30rpx auto 0 auto;
}
.bottomNav .li .cart .num{
    position: absolute;
    top:0px;
    right:-8px;
    width: 26rpx;
    height: 26rpx;
    line-height: 26rpx;
    font-size: 24rpx;
    color:#fff;
    border-radius: 50%;
    background-color: #ff0000;
}
.bottomNav .li:nth-child(2){
    background: #ffa500;
    color:#fff;
}
.bottomNav .li:nth-child(3){
    background: #00aaef;
    color:#fff;
}
.bottomNav .li:nth-child(4){
    background: #69c3aa;
    color:#fff;
}