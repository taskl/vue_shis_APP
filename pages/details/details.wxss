.goods_info {
    background-color: #fff;
    padding:20rpx 20rpx 0px 20rpx;
}
.goods_info .goods_title{
    font-size: 30rpx;
    line-height: 40rpx;
    height: 80rpx;
    color:#5f5f5f;
    padding-right: 140rpx;
    position: relative;
}
.goods_info .goods_title .title{
    height: 80rpx;
    overflow: hidden;
}
.goods_info .collect{
    height:80rpx;
    width: 120rpx;
    position: absolute;
    right: 0px;
    top:0px;
    border-left: 1px solid #e5e5e5;
    text-align: center;
    font-size: 24rpx;
    line-height: 28rpx;
}
.goods_info .collect text{
    display: block;
}
.goods_info .collect view{
    /* width: 100%; */
    font-size: 50rpx;
    display: block;
    margin-top: 26rpx;
}
.goods_info .collect .icon-aixin{
    color: #f00;

}

.goods_info .goods_price{
    font-size: 34rpx;
    color:#ff0000;
    margin:20rpx 0px;
}

.goods_info .goods_price .old{
    font-size: 24rpx;
    color:#535353;
    text-decoration: line-through;
}

.goods_info .bottom{
    height: 62rpx;
    line-height: 62rpx;
    color:#676767;
    font-size: 24rpx;
    border-top: 1px solid #f5f6f7;
}
